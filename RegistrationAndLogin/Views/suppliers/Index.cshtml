@model IEnumerable<RegistrationAndLogin.Models.supplier>

@{
    ViewBag.Title = "Index";
}
<div class="main-content" id="content">
    <h2>Suppliers</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <p>
        @using (@Html.BeginForm("Index", "suppliers", FormMethod.Get))
        {
            <b>Search By:</b>
            @Html.RadioButton("searchBy", "supplier_name", true) <text>SupplierName</text>
            @Html.RadioButton("searchBy", "email_id") <text>EmailID</text><br />
            @Html.TextBox("search") <input type="submit" value="search" />
        }
    </p>
    <div class="xs tabls">
        <div class="bs-example4" data-example-id="contextual-table">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.supplier_name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.contact)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.email_id)
                    </th>
                    <th></th>
                </tr>
@if (Model.Count() == 0)
{
    <tr>
        <td colspan="4">
            No records match search criteria
        </td>
    </tr>
}
else
{
                foreach (var item in Model)
                {
                    <tr class="td">
                        <td>
                            @Html.DisplayFor(modelItem => item.supplier_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.contact)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.email_id)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.supplier_id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.supplier_id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.supplier_id })
                        </td>
                    </tr>
                }
}
            </table>
        </div>
    </div>
</div>